<h1>
  List of all actors
</h1>

<hr>

<form action="/insert_actor_record" method="post">
  <div>
    <label for="name_a_field">Name</label>
    <input id="name_a_field" type="text" name="the_a_name">
  </div>

  <div>
    <label for="dob_a_field">Dob</label>
    <input id="dob_a_field" type="date" name="the_a_dob">
  </div>

  <div>
    <label for="bio_a_field">Bio</label>
    <input id="bio_a_field" type="text" name="the_a_bio">
  </div>

  <div>
    <label for="image_a_field">Image</label>
    <input id="image_a_field" type="text" name="the_a_image">
  </div>

  <button>
    Create actor
  </button>
</form>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_actors.each do |an_actor| %>
  <tr>
    <td>
      <%= an_actor.id %>
    </td>

    <td>
      <img src="<%= an_actor.image %>" style="width:250px;">
    </td>

    <td>
      <%= an_actor.name %>
    </td>

    <td>
      <%= an_actor.dob %>
    </td>

    <td>
      <a href="/actors/<%= an_actor.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
